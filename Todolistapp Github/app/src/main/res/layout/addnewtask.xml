<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trangnhat"
    tools:context=".AddNewTask">

    <EditText
        android:id="@+id/edittextaddnewtask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/xanhdam"
        android:hint="Write your task here..."
        android:textColor="@color/dennhat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texviewsetdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/baseline_calendar_today"
        android:drawablePadding="8dp"
        android:text="Set due date"
        android:textColor="@color/dennhat"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextaddnewtask" />

    <Button
        android:id="@+id/buttonsavenewtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Save"
        android:textColor="@color/dennhat"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18dp"
        android:backgroundTint="@color/xanhdam"
        app:layout_constraintTop_toBottomOf="@+id/edittextaddnewtask" />

</androidx.constraintlayout.widget.ConstraintLayout>